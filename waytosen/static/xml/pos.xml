<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PaymentScreenWidget" t-as="CustomPaymentScreenWidget">
        <t t-jquery="div[class='payment-buttons']" t-operation="append">
            <button t-attf-class="button popup_phone_paids" style="width:320px;">
                <span>Popup phone paid</span>
            </button>
        </t>
    </t>
    <t t-name="PopupPhonePaid">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-textinput">
                <header class="title">
                    <t t-esc=" widget.options.title || '' " />
                </header>
                <input type='text' class="popup_phone_paid" name="popup_phone_paid"></input>
                <div class="footer">
                    <div class="button confirm">
                        Confirm
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
